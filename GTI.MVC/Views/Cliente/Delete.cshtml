@model GTI.MVC.Models.ClienteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza de que deseja apagar esse registro?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">      
        <dt class = "col-sm-2">
            CPF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            RG
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rg)
        </dd>
        <dt class = "col-sm-2">
            Data de Expedição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataExpedicao)
        </dd>
        <dt class = "col-sm-2">
            Orgão de Expedição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrgaoExpedicao)
        </dd>
        <dt class = "col-sm-2">
            UF Expedição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uf)
        </dd>
        <dt class = "col-sm-2">
            Data de Nascimento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataDeNascimento)
        </dd>
        <dt class = "col-sm-2">
            Sexo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class = "col-sm-2">
            Estado Civil
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Confirmar exclusão" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para lista de clientes</a>
    </form>
</div>
